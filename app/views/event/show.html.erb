<h1>page de l'évènement <%= @event.title %></h1>



<p><%= @event.title %></p>
<p><%= @event.description %></p>
<p><%= @event.start_date %></p>
<p><%= @event.duration %></p>
<p><%= @event.location %></p>
<p><%= @event.price %></p>

<% if current_user != @event.user  %>
  <%= link_to 'rejoindre l\'évènement', new_event_charge_path(@event.id), class: 'btn btn-outline-secondary' %>
<%end%>

<% if current_user == @event.user %>
  <%= link_to 'Mon espace', event_charges_path(@event.id), class: 'btn btn-outline-secondary' %>
<% end%>